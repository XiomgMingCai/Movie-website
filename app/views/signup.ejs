<%- include('layout/head') %>
<%- include('layout/header') %>
<div class="container">
    <form class="form-signin" action="/users/signup" method="post">
        <h2 class="form-signin-heading">注册</h2>
        <div class="form-group">
            <div>
                <input type="text" name="user[name]" id="username" class="form-control" autofocus placeholder="请输入用戶名" value="">
                <span class="help-block"></span>
            </div>
        </div>
        <div class="form-group">
            <div>
                <input type="text" name="user[password]" id="password" class="form-control "
                       placeholder="请输入密碼" value="">
                <span class="help-block"></span>
            </div>
        </div>
        <div class="form-group">
            <input type="submit" class="btn btn-primary btn-lg btn-block" value="注册">
        </div>
    </form>
</div>
<script src="/javascripts/signin.js"></script>
</body>
</html>
